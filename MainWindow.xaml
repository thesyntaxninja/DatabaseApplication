<Window x:Class="DatabaseApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Esmay Database Application" Height="357" Width="614">
    <Grid Loaded="Grid_Loaded">
        <Menu HorizontalAlignment="Left" Height="21" Margin="10,10,0,0" VerticalAlignment="Top" Width="134">
            <MenuItem Header="Menu" Click="Menu_Click">
                <MenuItem Header="Add Record" HorizontalAlignment="Left" Width="202" Click="AddItem_Click"/>
                <MenuItem Header="Delete Record" HorizontalAlignment="Left" Width="202" Click="DeleteRecord_Click"/>
                <MenuItem Header="Exit" HorizontalAlignment="Left" Width="202" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Edit" Click="Edit_Click">
                <MenuItem Header="Edit Record" HorizontalAlignment="Left" Width="202" Click="EditRecord_Click"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem x:Name="About" Header="About" Click="About_Click"/>
            </MenuItem>
        </Menu>
        <DataGrid x:Name="CustomerDataGrid" HorizontalAlignment="Left" Margin="10,36,0,10" Width="586" Loaded="DataGrid_Loaded"/>

    </Grid>
</Window>
