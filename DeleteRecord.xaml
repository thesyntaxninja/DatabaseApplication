<Window x:Class="DatabaseApplication.DeleteRecord"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DeleteRecord" Height="163" Width="370">
    <Grid Height="200" VerticalAlignment="Top">
        <Button x:Name="CnclBut" Content="Cancel" HorizontalAlignment="Left" Margin="248,80,0,0" VerticalAlignment="Top" Width="75" Click="CnclBut_Click"/>
        <Button x:Name="OkBut" Content="OK" HorizontalAlignment="Left" Margin="163,80,0,0" VerticalAlignment="Top" Width="75" Click="OkBut_Click"/>
        <Label Content="Enter ID of Record to Delete:" HorizontalAlignment="Left" Margin="23,32,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.478,1.731"/>
        <TextBox x:Name="CustID" HorizontalAlignment="Left" Height="23" Margin="203,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
